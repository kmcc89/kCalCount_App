<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kevmc.kcalcount.LoginActivity">


    <EditText
        android:id="@+id/username_sign_in_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Username..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_pass_sign_in_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_sign_in_et"
        android:layout_alignStart="@+id/username_sign_in_et"
        android:layout_below="@+id/username_sign_in_et"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword" />

    <Button
        android:id="@+id/user_sign_in_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_pass_sign_in_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Sign In" />

    <Button
        android:id="@+id/newUserRegisterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/user_sign_in_btn"
        android:layout_marginTop="24dp"
        android:text="New user? Register your details here" />

    <Button
        android:id="@+id/useAppNoLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newUserRegisterBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Use App Without Logging In" />


</RelativeLayout>

