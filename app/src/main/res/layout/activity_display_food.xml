<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kevmc.kcalcount.DisplayFood">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="136dp"
        android:layout_toLeftOf="@+id/tv_food_id"
        android:layout_toStartOf="@+id/tv_food_id"
        android:text="ID:" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="21dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView18"
        android:layout_alignRight="@+id/textView18"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="17dp"
        android:text="Type" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView19"
        android:layout_alignRight="@+id/textView19"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="22dp"
        android:text="Calories" />

    <TextView
        android:id="@+id/tv_food_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView18"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:contentDescription="Food ID"
        android:fadingEdge="horizontal|vertical"
        android:outlineProvider="background"
        android:text="Food Id"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_food_id"
        android:layout_alignStart="@+id/tv_food_id"
        android:layout_alignTop="@+id/textView18"
        android:text="Food Name"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_food_name"
        android:layout_alignRight="@+id/tv_food_name"
        android:layout_alignTop="@+id/textView19"
        android:text="Food Type" />

    <TextView
        android:id="@+id/tv_food_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_food_type"
        android:layout_alignStart="@+id/tv_food_type"
        android:layout_alignTop="@+id/textView20"
        android:text="Calories" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_food_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:fontFamily="monospace"
        android:text="Selected Food Details"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
